@{
    ViewData["Title"] = "Payment Canceled";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="card-title text-danger mb-4">
                        <i class="bi bi-x-circle-fill"></i> Payment Canceled
                    </h2>
                    <p class="card-text lead">
                        Your payment has been canceled. If you wish to complete your purchase, please try again.
                    </p>
                    <hr class="my-4">
                    <p class="text-muted">Need help? <a href="#" class="text-primary">Contact our support team</a> for assistance.</p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
