@model ETickets.Models.Categories

@{
    ViewData["Title"] = "Add Category";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Add Category</h1>

    <h4 class="text-center">Categories</h4>
    <div class="text-center">
        <span style="display: @(TempData["Category Exists"] == null ? "none" : "")" class="text-danger">
            This Category Exists: @TempData["Category Exists"]
        </span>
    </div>


    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="AddCategory">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
